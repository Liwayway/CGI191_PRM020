<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".BatteryActivity">

    <LinearLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Image" />

        <TextView
            android:id="@+id/battery_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battery Status" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/p_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/power_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Power Source" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/p_source"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battery Level" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_health"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_level"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battery Health" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_voltage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_health"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bttery Voltage" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_voltage"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battery Temperature" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_technology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b_temperature"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battery_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Battery Technology" />
    </LinearLayout>

</RelativeLayout>